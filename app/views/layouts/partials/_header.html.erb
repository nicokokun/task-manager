<header class="shadow">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-700">Task Manager</h1>
        <div id="auth-section">
        <!-- If user is signed in -->
        <% if current_user%>
            <div id="user-info">
                <span class="text-gray-600 font-medium">Welcome, <span id="username"></span>!</span>
                <button class="ml-4 px-4 py-2 text-white bg-red-500 hover:bg-red-600 rounded" onclick="logout()">Logout</button>
            </div>
        <% else %>
            <!-- If user is not signed in -->
            <div id="guest-links">
                <a href="/login" class="px-4 py-2 text-gray-700 border border-gray-300 rounded hover:bg-gray-200">Login</a>
                <a href="/signup" class="ml-4 px-4 py-2 text-white bg-blue-500 hover:bg-blue-600 rounded">Sign Up</a>
            </div>
        <% end %>
        </div>
    </div>
</header>