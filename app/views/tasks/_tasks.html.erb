<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <turbo-frame id="task_<%= task.id %>">
        <%= render partial: "task", locals: { task: task } %>
      </turbo-frame>
    <% end %>
  </tbody>
</table>