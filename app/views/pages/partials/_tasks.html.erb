<table class="home-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Completed</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <turbo-frame id="task_<%= task.id %>">
        <%= render partial: "/pages/partials/task", locals: { task: task } %>
      </turbo-frame>
    <% end %>
  </tbody>
</table>